<div class="jumbotron vertical-center">
	<div class="container" >
		<div class="row justify-content-center">
			<div class="col-sm-8">
				<%= simple_form_for [@contact] do |f| %>
					<%= f.input :first_name, as: :string, required: false  %>
					<%= f.input :last_name, as: :string, required: false %>
					<div class="form-actions d-flex justify-content-center mt-3 mb-5">
						<%= f.submit "Save", class: "button-secondary" %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>