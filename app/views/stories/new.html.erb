<h1 class="title">Create a memory</h1>

<div class="full-screen">


  <%= simple_form_for [@story] do |f| %>
    <%= f.input :title, as: :string, required: false  %>
    <%= f.input :date, as: :date %>
    <%= f.input :description, as: :string, required: false %>
    <%= f.submit "Save", class: "button-secondary" %>
  <% end %>

</div>
